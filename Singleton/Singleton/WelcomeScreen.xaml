
<Window x:Class="Singleton.WelcomeScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Panel de Bienvenida" Height="300" Width="500">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="txtWelcome" FontSize="24" TextAlignment="Center" Margin="0,0,0,20"/>
            <TextBlock x:Name="txtTime" FontSize="18" TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>